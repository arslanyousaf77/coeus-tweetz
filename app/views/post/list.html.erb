<% if @posts.blank? %>
<p>There are not any posts.</p>
<% else %>
<p>These are the current books in our system</p>

<ul id = "posts">
   <% @posts.each do |c| %>
   <li><%= link_to c.content, {:action => 'show', :id => c.id} -%></li>
   <% end %>
</ul>

<% end %>
<p><%= link_to "Add new Post", {:action => 'new' }%></p>
