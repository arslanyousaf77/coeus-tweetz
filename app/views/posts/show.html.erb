<% content_for :head do %>
  <title>Post | Coeus Tweetz</title>
<% end %>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Content</th>
      <th>Published at</th>
      <th colspan="2">Actions</th>
    </tr>
  </thead>

  <tbody>
      <tr>
        <td><%= @post.user.name %></td>
        <td><%= @post.content %></td>
        <td><%= @post.created_at.localtime.strftime("%d-%m-%Y %H:%M:%S") %></td>
        <td><%= link_to "Edit", edit_user_post_path(@post.user, @post) %></td>
        <td><%= link_to "Delete", user_post_path(@post.user, @post), method: :delete, data: { confirm: "Are you sure?" } %></td>
      </tr>
  </tbody>
</table>

<%= link_to "New post", new_user_post_path %>